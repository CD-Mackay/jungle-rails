<table class="table table-bordered">
<thead>
<tr>
  <th colspan="3">Products</th>
  <th>Unit Price</th>
  <th>Quantity</th>
  <th>Price</th>
</tr>
</thead>
<tbody>
<% @order.line_items.each do |line| %>
  <tr>
  <td>
  <h4><%= line.product.name %></h4>
  <br>
  <td><%= line.product.description %></td>
  <td><%= image_tag line.product.image.tiny %></td>
</td>
<td><%= humanized_money_with_symbol line.item_price_cents %></td>
<td><%= line.quantity %></td>
<td><%= humanized_money_with_symbol line.item_price_cents * line.quantity %></td>

</tr>
<% end %>
</tbody>
</table>



